<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border_radius"
    android:elevation="10dp">

    <TextView
        android:id="@+id/txtDiemGiua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="86dp"
        android:text="@string/label_diem_giua_ki"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtMidGrades"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/card_border_black"
        android:ems="10"

        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDiemGiua"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDiemCuoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:text="@string/label_diem_cuoi_ki"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDiemGiua" />

    <EditText
        android:id="@+id/edtFinalGrades"
        android:layout_width="208dp"
        android:layout_height="28dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/card_border_black"
        android:ems="10"

        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDiemCuoi"
        app:layout_constraintTop_toBottomOf="@+id/edtMidGrades" />

    <Button
        android:id="@+id/btnFillOK"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/btn_round_corner"
        android:text="@string/btn_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtFinalGrades"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>