<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleFr"
        android:background="@drawable/card_round_corner"
        android:textSize="30dp"
        android:text="@string/title_chitietthongbao"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="14dp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_round_corner"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/noti_detail_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="356dp"
            android:src="@drawable/icon_mail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:text="@string/title_thongbao"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            android:text="TextView"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@+id/noti_detail_img"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/txtFrom"
            app:layout_constraintTop_toBottomOf="@+id/txtFrom" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toEndOf="@+id/noti_detail_img"
            app:layout_constraintTop_toBottomOf="@+id/txtTo" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="239dp"
            android:layout_height="108dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="200dp"
            android:inputType="textMultiLine"
            android:text="TextViewTextViewTextViewTextViewTextVi                "
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/btn_round_corner"
            android:text="@string/btn_ok"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>












